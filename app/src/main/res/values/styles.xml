<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="single_movie_info_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/bigText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="single_movie_meta_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/smallTopMargin</item>
        <item name="android:textSize">@dimen/normalText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="single_movie_meta_info">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/smallMarginStart</item>
        <item name="android:layout_marginTop">@dimen/smallTopMargin</item>
        <item name="android:textSize">@dimen/normalText</item>
    </style>

    <style name="single_movie_meta_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

</resources>